alias back nick Succorso;away

alias w whois $0
alias ww whowas $0
alias hold window hold_mode toggle

alias crap window refnum CRAP
alias msgs window refnum MSGS
alias srh window refnum SRH
alias netcom window refnum NETCOM
alias marklar window refnum MARKLAR

alias resize {
	window balance
	window push
	window refnum crap
	window shrink 2
	window refnum msgs
	window shrink 7
	window pop
}

alias cleanup {
	window push
	window refnum crap
	clear
	window refnum msgs
	clear
	window pop
}
